        <Rectangle Tag="wall" Stroke="Aqua" StrokeThickness="3" Height="10" Width="100" Canvas.Left="300" Canvas.Top="250" />
        <Rectangle Tag="wall" Stroke="Aqua" StrokeThickness="3" Height="10" Width="100" Canvas.Left="405" Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Center" />

        <!-- More walls can be added here for the actual map details -->

